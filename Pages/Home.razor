@page "/"
@inject IJSRuntime JSRuntime
@inject ScrapperStateService State
@implements IDisposable

<PageTitle>Scrapper 3000</PageTitle>

<div class="game-container">
    <canvas id="renderCanvas" class="game-canvas"></canvas>

    @if (State.IsLoading)
    {
        <div class="loading-overlay">
            <div class="loader"></div>
            <p>Sifting through the scrap...</p>
        </div>
    }

    @if (State.IsLandingPage)
    {
        <div class="landing-page">
            <div class="landing-box">
                <h1>SCRAPPER 3000</h1>
                <p class="welcome">Welcome back, <span class="player-name">@State.PlayerName</span></p>
                <div class="landing-actions">
                    <button class="btn-primary" @onclick="ContinueJourney">CONTINUE JOURNEY</button>
                    <button class="btn-secondary" @onclick="State.StartNewGame">START NEW GAME</button>
                </div>
            </div>
        </div>
    }

    @if (State.IsCustomizing)
    {
        <div class="customization-panel">
            <h3>Refine Your Look</h3>
            <div class="option-group">
                <label>Gender</label>
                <div class="btn-group">
                    <button class="@(State.Gender == "Male" ? "active" : "")" @onclick='() => SetGender("Male")'>Male</button>
                    <button class="@(State.Gender == "Female" ? "active" : "")" @onclick='() => SetGender("Female")'>Female</button>
                </div>
            </div>

            <div class="option-group">
                <label>Hair Length</label>
                <input type="range" min="0" max="1" step="0.1" value="@State.HairLength" @oninput="UpdateHairLength" />
            </div>

            <div class="option-group">
                <label>Hair Color</label>
                <input type="color" value="@State.HairColor" @oninput="UpdateHairColor" />
            </div>

            <button class="btn-confirm" @onclick="FinishCustomization">Confirm & Exit Shed</button>
        </div>
    }

    @if (!State.IntroComplete && !State.IsLandingPage && !State.IsLoading && !State.IsCustomizing)
    {
        <div class="intro-overlay">
            <div class="dialogue-box">
                <p>@State.DialogueText</p>
                <div class="equipment-status">
                    <span class="@(State.HasBackpack ? "equipped" : "")">🎒 Backpack</span>
                    <span class="@(State.HasOveralls ? "equipped" : "")">👖 Overalls</span>
                    <span class="@(State.HasStick ? "equipped" : "")">🪵 Stick</span>
                </div>
            </div>
        </div>
    }
    else if (State.IntroComplete && !State.IsLandingPage)
    {
        <div class="hud">
            <div class="hud-item credits">💰 @State.Credits Credits</div>
            <div class="hud-item dialogue-hud">@State.DialogueText</div>
        </div>

        <div class="backpack-hud">
            <div class="backpack-header">🎒 BACKPACK contents</div>
            <div class="backpack-list">
                @foreach (var item in State.Inventory.Where(i => i.Value > 0))
                {
                    <div class="backpack-item">
                        <span class="item-name">@item.Key</span>
                        <span class="item-count"> x @(item.Value)</span>
                    </div>
                }
                @if (!State.Inventory.Values.Any(v => v > 0))
                {
                    <div class="backpack-empty">Empty</div>
                }
            </div>
        </div>
    }

    @if (State.IsShopOpen)
    {
        <div class="shop-overlay">
            <div class="shop-box">
                <div class="shop-header">
                    <h2>SAM'S TRADE KIOSK</h2>
                    <button class="btn-close" @onclick="State.CloseShop">X</button>
                </div>
                <div class="shop-inventory">
                    @foreach (var item in State.Inventory)
                    {
                        <div class="shop-row @(item.Value > 0 ? "" : "empty")">
                            <span class="item-name">@item.Key</span>
                            <span class="item-price">🪙 @(State.MaterialPrices[item.Key])</span>
                            <span class="item-stock">OWNED: @item.Value</span>
                            <button class="btn-sell" @onclick='() => State.SellItem(item.Key)' disabled="@(item.Value <= 0)">SELL 1</button>
                        </div>
                    }
                </div>
                <div class="shop-footer">
                    <div class="total-credits">YOUR BALANCE: 💰 @State.Credits</div>
                </div>
            </div>
        </div>
    }

    @if (State.IsNaming || (State.IntroComplete && State.PlayerName == "Scrapper"))
    {
        <div class="naming-overlay">
            <div class="naming-box">
                <h2>Welcome to the Junkyard</h2>
                <p>What is your name, scrapper?</p>
                <input @bind="_tempName" placeholder="Enter name..." @onkeydown="@(e => { if(e.Key == "Enter") ConfirmName(); })" />
                <button @onclick="ConfirmName">Begin Journey</button>
            </div>
        </div>
    }
</div>

@code {
    private DotNetObjectReference<Home>? _objRef;
    private string _tempName = "";

    private async Task ContinueJourney()
    {
        State.ContinueGame();
        await JSRuntime.InvokeVoidAsync("Scrapper3000.jumpToJunkyard", State.Gender, State.HairLength, State.HairColor);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _objRef = DotNetObjectReference.Create(this);
            
            // Initialize Firebase (Assuming config is provided)
            await JSRuntime.InvokeVoidAsync("FirebaseBridge.init", GetFirebaseConfig());
            await JSRuntime.InvokeVoidAsync("FirebaseBridge.loadPlayerState", _objRef);

            await JSRuntime.InvokeVoidAsync("Scrapper3000.init", _objRef, "renderCanvas");
            State.OnUIChange += async () => {
                Console.WriteLine($"[RAZOR] UI Update: N={State.IsNaming}, I={State.IntroComplete}, P={State.PlayerName}");
                await InvokeAsync(StateHasChanged);
                await JSRuntime.InvokeVoidAsync("FirebaseBridge.savePlayerState", State.GetSerializedState());
            };
        }
    }

    private string GetFirebaseConfig()
    {
        return @"{
            ""apiKey"": ""AIzaSyCRyw6dcixXbGAJN_ge2LqX5f2EVprcRPo"",
            ""authDomain"": ""scrapper3000.firebaseapp.com"",
            ""projectId"": ""scrapper3000"",
            ""storageBucket"": ""scrapper3000.firebasestorage.app"",
            ""messagingSenderId"": ""363115569481"",
            ""appId"": ""1:363115569481:web:f35184fd75600990f2ba98"",
            ""measurementId"": ""G-TC1LGPCT78""
        }"; 
    }

    [JSInvokable]
    public void OnPlayerStateLoaded(string stateJson)
    {
        State.LoadFromState(stateJson);
        StateHasChanged();
    }

    [JSInvokable]
    public async Task OnItemPickedUp(string itemType)
    {
        bool alreadyComplete = State.IntroComplete;
        bool alreadyCustomizing = State.IsCustomizing;

        // Check if it's equipment or a material
        if (new List<string> { "backpack", "overalls", "stick" }.Contains(itemType.ToLower()))
        {
            State.EquipItem(itemType);
        }
        else
        {
            State.AddInventory(itemType, 1);
        }
        
        if (!alreadyCustomizing && State.IsCustomizing)
        {
            // Transition to mirror view for customization
            await JSRuntime.InvokeVoidAsync("Scrapper3000.switchToThirdPerson", State.Gender, State.HairLength, State.HairColor);
        }

        if (!alreadyComplete && State.IntroComplete)
        {
            // Already handled in CompleteCustomization, but safe-guard
        }
    }

    [JSInvokable]
    public void SetDialogue(string message)
    {
        State.SetDialogue(message);
        StateHasChanged();
    }

    [JSInvokable]
    public void OpenShop() => State.OpenShop();

    [JSInvokable]
    public void CloseShop() => State.CloseShop();

    [JSInvokable]
    public void SellItem(string material) => State.SellItem(material);

    private async Task SetGender(string gender)
    {
        State.UpdateCustomization(gender, State.HairLength, State.HairColor);
        await JSRuntime.InvokeVoidAsync("Scrapper3000.updateAvatar", State.Gender, State.HairLength, State.HairColor);
    }

    private async Task UpdateHairLength(ChangeEventArgs e)
    {
        if (float.TryParse(e.Value?.ToString(), out float length))
        {
            State.UpdateCustomization(State.Gender, length, State.HairColor);
            await JSRuntime.InvokeVoidAsync("Scrapper3000.updateHair", State.HairLength, State.HairColor);
        }
    }

    private async Task UpdateHairColor(ChangeEventArgs e)
    {
        State.UpdateCustomization(State.Gender, State.HairLength, e.Value?.ToString() ?? State.HairColor);
        await JSRuntime.InvokeVoidAsync("Scrapper3000.updateHair", State.HairLength, State.HairColor);
    }

    private async Task FinishCustomization()
    {
        State.CompleteCustomization();
        await InvokeAsync(StateHasChanged); 
        
        await JSRuntime.InvokeVoidAsync("Scrapper3000.exitShed");
        State.SetDialogue("Now, get on out there and start collecting some scrap!");
    }

    private void ConfirmName()
    {
        if (!string.IsNullOrWhiteSpace(_tempName))
        {
            State.SetPlayerName(_tempName);
            State.SetDialogue($"Welcome, {State.PlayerName}. Time to find some scrap.");
        }
    }

    public void Dispose()
    {
        State.OnUIChange -= StateHasChanged;
        _objRef?.Dispose();
    }
}

