@page "/"
@inject IJSRuntime JSRuntime
@inject ScrapperStateService State
@implements IDisposable
@using System.Threading

<PageTitle>Scrapper 3000</PageTitle>

<div class="game-container" tabindex="0" @onkeydown="HandleGlobalKeydown" id="game-container">
    <canvas id="renderCanvas" class="game-canvas"></canvas>

    @if (State.IsPaused)
    {
        <div class="pause-overlay">
            <div class="pause-menu">
                <div class="pause-header">GAME PAUSED</div>
                <div class="pause-buttons">
                    <button class="btn-pause" @onclick="State.TogglePause">RETURN TO GAME</button>
                    <button class="btn-pause" @onclick="ManualSave">SAVE GAME</button>
                    <button class="btn-pause" @onclick="State.ExitGame">EXIT TO MAIN MENU</button>
                </div>
            </div>
        </div>
    }
    <!-- Death Screen Overlay -->
    @if (State.IsDead)
    {
        <div class="death-overlay">
            <h1>SYSTEM CRITICAL</h1>
            <p>Vital signs offline.</p>
            <div class="death-actions">
                <button class="respawn-btn" @onclick="RespawnPlayer">
                    REBOOT SYSTEM 
                    <span class="cost">(@(State.Credits >= 50 ? "50 Credits" : (State.Credits > 0 ? "ALL Credits" : "Free")))</span>
                </button>
            </div>
        </div>
    }

    @if (State.IsLoading)
    {
        <div class="loading-overlay">
            <div class="loader"></div>
            <p>Sifting through the scrap...</p>
        </div>
    }

    <!-- Transition Curtain -->
    <div class="transition-curtain @(_isTransitioning ? "" : "hidden")">
        <div class="loader"></div>
        <p>ENTERING THE WASTELAND...</p>
    </div>

    @if (State.IsLandingPage)
    {
        <div class="landing-page">
            <div class="landing-box">
                <h1>SCRAPPER 3000</h1>
                <p class="welcome">The Junkyard Awaits.</p>
                <div class="landing-actions">
                    <button class="btn-primary" @onclick="PrepareSlotSelection">LOAD / START GAME</button>
                    
                    <div class="storage-toggle">
                        <label>Storage Mode:</label>
                        <select @onchange="OnStorageModeChange" value="@_storageMode">
                            <option value="local">LocalStorage (Safe)</option>
                            <option value="firebase">Cloud (Firestore)</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (State.IsSelectingSlot)
    {
        <div class="slot-selection-overlay">
            <div class="slot-selection-box">
                <div class="slot-header">
                    <h2>SELECT SAVE SLOT</h2>
                    <button class="btn-close" @onclick="() => State.SelectSlot(State.SelectedSlotId)">X</button>
                </div>
                
                <div class="slot-list">
                    @foreach (var slot in State.AvailableSlots)
                    {
                        <div class="slot-card @(slot.IsEmpty ? "empty" : "occupied")" @onclick="() => HandleSlotClick(slot)">
                            <div class="slot-num">SLOT @slot.SlotId</div>
                            @if (slot.IsEmpty)
                            {
                                <div class="slot-info">— EMPTY SLOT —</div>
                                <button class="btn-slot-action new">START NEW</button>
                            }
                            else
                            {
                                <div class="slot-info">
                                    <span class="slot-name">@slot.PlayerName</span>
                                    <span class="slot-details">LVL @slot.Level | @slot.Gender</span>
                                    <div class="slot-hp">HP: @slot.HP / @slot.MaxHP</div>
                                </div>
                                <div class="slot-actions">
                                    <button class="btn-slot-action load">CONTINUE</button>
                                    <button class="btn-slot-action delete" @onclick:stopPropagation="true" @onclick="() => DeleteSlot(slot.SlotId)">🗑️</button>
                                </div>
                            }
                        </div>
                    }
                </div>
                
                <div class="slot-footer">
                    <button class="btn-back" @onclick="State.ExitGame">BACK TO MENU</button>
                </div>
            </div>
        </div>
    }

    @if (State.IsCustomizing)
    {
        <div class="customization-panel">
            <h3>Refine Your Look</h3>
            <div class="option-group">
                <label>Gender</label>
                <div class="btn-group">
                    <button class="@(State.Gender == "Male" ? "active" : "")" @onclick='() => SetGender("Male")'>Male</button>
                    <button class="@(State.Gender == "Female" ? "active" : "")" @onclick='() => SetGender("Female")'>Female</button>
                </div>
            </div>

            <div class="option-group">
                <label>Hair Length</label>
                <input type="range" min="0" max="1" step="0.1" value="@State.HairLength" @oninput="UpdateHairLength" />
            </div>

            <div class="option-group">
                <label>Hair Color</label>
                <input type="color" value="@State.HairColor" @oninput="UpdateHairColor" />
            </div>

            <button class="btn-confirm" @onclick="FinishCustomization">Confirm & Exit Shed</button>
        </div>
    }

    @if (!State.IntroComplete && !State.IsLandingPage && !State.IsLoading && !State.IsCustomizing)
    {
        <div class="intro-overlay">
            <div class="dialogue-box">
                <p>@State.DialogueText</p>
                <div class="equipment-status">
                    <span class="@(State.HasBackpack ? "equipped" : "")">🎒 Backpack</span>
                    <span class="@(State.HasOveralls ? "equipped" : "")">👖 Overalls</span>
                    <span class="@(State.HasStick ? "equipped" : "")">🪵 Stick</span>
                </div>
            </div>
        </div>
    }
    else if (State.IntroComplete && !State.IsLandingPage)
    {
        <div class="hud">
            <div class="hud-item credits">💰 @State.Credits Credits</div>
            <div class="hud-item stats-card">
                <div style="font-size: 1.2rem; margin-bottom: 5px;">
                    <span class="level-badge">@State.Level</span>
                    @State.PlayerName
                </div>
                
                <div style="display: flex; justify-content: space-between; font-size: 0.9rem; color: #aaa;">
                    <span>HP: @State.HP / @State.MaxHP</span>
                    <span>EXP: @State.CurrentExp / @State.NextLevelExp</span>
                </div>

                <div class="hp-bar-container">
                    <div class="hp-bar-fill" style="width: @(GetHPPercent())%;"></div>
                </div>
                
                <div class="exp-bar-container">
                     <div class="exp-bar-fill" style="width: @(GetExpPercent())%;"></div>
                </div>

                <div style="margin-top: 10px; font-size: 0.9rem; border-top: 1px solid #555; padding-top: 5px;">
                    <div>⚔️ ATK: @State.AttackPower</div>
                    <div>🛡️ DEF: @State.Defense</div>
                </div>
            </div>
            <div class="hud-item gear-card">
                <div class="gear-header">⚔️ EQUIPPED GEAR</div>
                @foreach (var slot in State.EquippedSlots)
                {
                    var icon = slot.Key switch {
                        "Weapon" => "🗡️",
                        "Head" => "🪖",
                        "Chest" => "🦺",
                        "Legs" => "👖",
                        "Feet" => "👢",
                        "Arms" => "🦾",
                        "Gloves" => "🧤",
                        _ => "📦"
                    };
                    <div class="gear-slot equipped">@icon @slot.Key: @slot.Value</div>
                }
                
                <button class="paper-doll-btn" @onclick="TogglePaperDoll">🎭 PAPER DOLL</button>
            </div>
            <div class="hud-item dialogue-hud">@State.DialogueText</div>
        </div>

        <div class="backpack-hud">
            <div class="backpack-header">🎒 BACKPACK contents</div>
            <div class="backpack-list">
                @foreach (var item in State.Inventory.Where(i => i.Value > 0))
                {
                    <div class="backpack-item">
                        <span class="item-name">@item.Key</span>
                        <span class="item-count">x @(item.Value)</span>
                    </div>
                }
                @if (!State.Inventory.Values.Any(v => v > 0))
                {
                    <div class="backpack-empty">Empty</div>
                }
            </div>
        </div>
    }

    @if (State.IsShopOpen)
    {
        <div class="shop-overlay">
            <div class="shop-box">
                <div class="shop-header">
                    <h2>SAM'S TRADE KIOSK</h2>
                    <button class="btn-close" @onclick="State.CloseShop">X</button>
                </div>
                <div class="shop-tabs">
                    <button class="@(_shopTab == "sell" ? "active" : "")" @onclick='() => _shopTab = "sell"'>SELL MATERIALS</button>
                    <button class="@(_shopTab == "buy" ? "active" : "")" @onclick='() => _shopTab = "buy"'>BUY GEAR</button>
                </div>
                <div class="shop-inventory">
                    @if (_shopTab == "sell")
                    {
                        @foreach (var item in State.Inventory)
                        {
                            <div class="shop-row @(item.Value > 0 ? "" : "empty")">
                                <span class="item-name">@item.Key</span>
                                <span class="item-price">🪙 @(State.MaterialPrices[item.Key])</span>
                                <span class="item-stock">OWNED: @item.Value</span>
                                <div class="sell-actions">
                                    <button class="btn-sell" @onclick='() => State.SellItem(item.Key)' disabled="@(item.Value <= 0)">SELL 1</button>
                                    <button class="btn-sell-all" @onclick='() => State.SellAll(item.Key)' disabled="@(item.Value <= 0)">SELL ALL</button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        @foreach (var item in State.AvailableGear.Where(g => g.Price > 0))
                        {
                            bool owned = State.OwnedGear.Contains(item.Name);
                            bool equipped = State.EquippedSlots.Values.Contains(item.Name);
                            <div class="shop-row @(owned ? "owned" : "")">
                                <span class="item-name">@item.Name <br/><small>@item.Description</small></span>
                                <span class="item-price">💰 @item.Price</span>
                                    <span class="item-stat">@(item.Type == "weapon" ? "ATK" : item.Type == "armor" ? "DEF" : "MK"): @item.Value</span>
                                @if (owned)
                                {
                                    <button class="btn-buy" disabled>OWNED</button>
                                }
                                else
                                {
                                    <button class="btn-buy" @onclick="() => State.BuyItem(item.Name)" disabled="@(State.Credits < item.Price)">BUY</button>
                                }
                            </div>
                        }
                    }
                </div>
                <div class="shop-footer">
                    <div class="total-credits">YOUR BALANCE: 💰 @State.Credits</div>
                </div>
            </div>
        </div>
    }

    @if (State.IsNaming || (State.IntroComplete && State.PlayerName == "Scrapper"))
    {
        <div class="naming-overlay">
            <div class="naming-box">
                <h2>Welcome to the Junkyard</h2>
                <p>What is your name, scrapper?</p>
                <input @bind="_tempName" placeholder="Enter name..." @onkeydown="@(e => { if(e.Key == "Enter") ConfirmName(); })" />
                <button @onclick="ConfirmName">Begin Journey</button>
            </div>
        </div>
    }

    @if (_showPaperDoll)
    {
        <div class="paper-doll-overlay" @onclick="TogglePaperDoll">
            <div class="paper-doll-modal" @onclick:stopPropagation="true">
                <div class="paper-doll-header">
                    <h2>🎭 EQUIPMENT MANAGER</h2>
                    <button class="close-btn" @onclick="TogglePaperDoll">✖</button>
                </div>
                
                <div class="paper-doll-stats">
                    <div class="stat-display">⚔️ ATK: @State.AttackPower</div>
                    <div class="stat-display">🛡️ DEF: @State.Defense</div>
                </div>

                <div class="paper-doll-grid">
                    @foreach (var slot in State.EquippedSlots.Keys)
                    {
                        var equipped = State.EquippedSlots[slot];
                        var icon = slot switch {
                            "Weapon" => "🗡️",
                            "Head" => "🪖",
                            "Chest" => "🦺",
                            "Legs" => "👖",
                            "Feet" => "👢",
                            "Arms" => "🦾",
                            "Gloves" => "🧤",
                            _ => "📦"
                        };
                        
                        <div class="equipment-slot">
                            <div class="slot-label">@icon @slot</div>
                            <select class="slot-dropdown" value="@equipped" @onchange="@(e => EquipFromDropdown(slot, e.Value?.ToString() ?? "None"))">
                                <option value="None">-- Empty --</option>
                                @foreach (var item in State.OwnedGear)
                                {
                                    var gearItem = State.AvailableGear.Find(g => g.Name == item);
                                    if (gearItem != null && gearItem.Slot == slot)
                                    {
                                        <option value="@item">@item (+@gearItem.Value)</option>
                                    }
                                }
                            </select>
                            @if (equipped != "None")
                            {
                                <button class="unequip-btn" @onclick="() => State.UnequipSlot(slot)">🗑️</button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private DotNetObjectReference<Home>? _objRef;
    private string _tempName = "";
    private string _shopTab = "sell";
    private string _storageMode = "local";
    private CancellationTokenSource? _saveCts;
    private bool _showPaperDoll = false;
    private bool _isTransitioning = false;

    private void TogglePaperDoll()
    {
        _showPaperDoll = !_showPaperDoll;
        Console.WriteLine($"Paper Doll toggled: {_showPaperDoll}");
    }

    private void EquipFromDropdown(string slot, string itemName)
    {
        if (itemName == "None")
            State.UnequipSlot(slot);
        else
            State.EquipItem(itemName, slot);
    }

    private async Task ContinueJourney()
    {
        // 1. Drop the Curtain
        _isTransitioning = true;
        StateHasChanged();
        await Task.Delay(100); // Allow render

        // 2. Trigger Hard Reset
        State.ContinueGame();
        await JSRuntime.InvokeVoidAsync("Scrapper3000.jumpToJunkyard", State.Gender, State.HairLength, State.HairColor);

        // 3. Lift Curtain (after delay for scene rebuild)
        await Task.Delay(2000); 
        _isTransitioning = false;
        StateHasChanged();
    }

    private async Task PrepareSlotSelection()
    {
        await JSRuntime.InvokeVoidAsync("StorageBridge.getAvailableSlots", _objRef);
        State.ShowSlotSelection();
    }

    private async Task HandleSlotClick(ScrapperStateService.SaveSlotSummary slot)
    {
        State.SelectSlot(slot.SlotId);
        
        if (slot.IsEmpty)
        {
            State.StartNewGame();
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("StorageBridge.loadPlayerState", _objRef, slot.SlotId);
        }
    }

    private async Task DeleteSlot(int slotId)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete Save Slot {slotId}? This cannot be undone.");
        if (confirm)
        {
            await JSRuntime.InvokeVoidAsync("StorageBridge.deletePlayerState", slotId);
            // Refresh slots
            await JSRuntime.InvokeVoidAsync("StorageBridge.getAvailableSlots", _objRef);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _objRef = DotNetObjectReference.Create(this);
            
            // Initialize Storage Bridge
            await JSRuntime.InvokeVoidAsync("StorageBridge.setStorageMode", _storageMode);
            await JSRuntime.InvokeVoidAsync("StorageBridge.init", GetFirebaseConfig());
            // Don't auto-load default slot, wait for selection
            // await JSRuntime.InvokeVoidAsync("StorageBridge.loadPlayerState", _objRef);

            await JSRuntime.InvokeVoidAsync("Scrapper3000.init", _objRef, "renderCanvas");
            
            // Initial Sync
            await JSRuntime.InvokeVoidAsync("Scrapper3000.updateStats", State.AttackPower, State.Defense);
            await JSRuntime.InvokeVoidAsync("Scrapper3000.updateGear");

            State.OnStateChanged += HandleSaveTrigger; 
            State.OnEquipmentChanged += HandleEquipmentUpdate;
            State.OnVisualUpdate += HandleVisualUpdate;
            State.OnRespawnTriggered += HandleRespawn;
            State.OnPlayerDied += HandleDeath;

            State.LoadingFinished();
        }
    }

    private async void HandleEquipmentUpdate()
    {
        try {
            await InvokeAsync(async () => 
            {
                await JSRuntime.InvokeVoidAsync("Scrapper3000.updateGear");
            });
        } catch (Exception ex) {
            Console.WriteLine("[RAZOR] Equipment Update Error: " + ex.Message);
        }
    }

    private void RespawnPlayer() => State.Respawn();

    private async void HandleDeath()
    {
        await InvokeAsync(async () =>
        {
            await JSRuntime.InvokeVoidAsync("Scrapper3000.playDeathAnimation");
            StateHasChanged();
        });
    }

    private async void HandleRespawn()
    {
        await InvokeAsync(async () => 
        {
            // State.Respawn() already handled logic, just need to sync engine
            await JSRuntime.InvokeVoidAsync("Scrapper3000.respawnPlayer");
            StateHasChanged();
        });
    }

    // Updates UI and syncs with 3D engine (Cheap)
    private async void HandleVisualUpdate()
    {
        await InvokeAsync(async () => 
        {
            StateHasChanged();
            await JSRuntime.InvokeVoidAsync("Scrapper3000.updateStats", State.AttackPower, State.Defense);
            // updateGear is called by HandleSaveTrigger when equipment actually changes
            await JSRuntime.InvokeVoidAsync("Scrapper3000.setPaused", State.IsPaused);
        });
    }

    // Queues the Cloud/Local Save (Expensive/Debounced)
    private async void HandleSaveTrigger()
    {
        try {
            // Debounce logic MUST stay on UI thread for JSRuntime safety
            _saveCts?.Cancel();
            _saveCts = new CancellationTokenSource();
            var token = _saveCts.Token;

            // Wait on the UI thread dispatcher
            await Task.Delay(_storageMode == "firebase" ? 30000 : 2000, token);
            
            if (!token.IsCancellationRequested) {
                await InvokeAsync(async () => {
                    try 
                    {
                        var json = State.GetSerializedState();
                        await JSRuntime.InvokeVoidAsync("StorageBridge.savePlayerState", json, State.SelectedSlotId);
                        Console.WriteLine($"[RAZOR] State Saved ({_storageMode}) to slot {State.SelectedSlotId} at {DateTime.Now:HH:mm:ss}.");
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine("[RAZOR] Save Execution Error: " + ex.Message);
                    }
                });
            }
        } catch (TaskCanceledException) {
            // Normal behavior for debouncing
        } catch (Exception ex) {
            Console.WriteLine("[RAZOR] Save Trigger Error: " + ex.Message);
        }
    }

    [JSInvokable]
    public string GetEquippedItemsMetadata()
    {
        return State.GetEquippedItemsMetadata();
    }

    private void HandleGlobalKeydown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            State.TogglePause();
        }
    }

    private async Task ManualSave()
    {
        await JSRuntime.InvokeVoidAsync("StorageBridge.savePlayerState", State.GetSerializedState(), State.SelectedSlotId);
        State.SetDialogue("Game progress saved.");
    }

